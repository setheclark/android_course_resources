<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textview_result" tools:text="Result Text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_enterName" android:textSize="24sp"
            android:layout_marginLeft="16dp"/>
    <Button
            android:text="Enter Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_enterName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>